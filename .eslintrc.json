{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
        "max-len": [2, 150],
      "@typescript-eslint/no-unused-vars": 2,
      "no-underscore-dangle": "off",
      "no-param-reassign": "off",
      "class-methods-use-this": "off",
      "default-case": "off",
      "no-shadow": "off",
      "import/prefer-default-export": "off",
      "prefer-promise-reject-errors": "error",
      "no-console": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "settings": {
        "import/resolver": {
            "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
